<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51087E"
    tools:context=".ColourSix">

    <TextView
        android:id="@+id/PurpleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="298dp"
        android:text="You chose Purple"
        android:textColor="#ffffff"
        android:textSize="75px"
        app:layout_constraintBottom_toTopOf="@+id/ReturnButton6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ReturnButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="298dp"
        android:layout_marginEnd="305dp"
        android:backgroundTint="#E91E63"
        android:onClick="ReturnPickAColour"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PurpleTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>